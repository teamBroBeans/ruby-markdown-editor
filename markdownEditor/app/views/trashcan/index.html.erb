<h1>Listing Trashcan items</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Tag</th>
      <th>Note Created</th>
      <th>Last Update</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= link_to note.title, edit_note_path(note) %></td>
        <td><%= note.tag %></td>
        <td><%= note.created_at.to_formatted_s(:long_ordinal) %></td>
				<td><%= time_ago_in_words(note.updated_at) %> ago</td>
        <td><%= link_to 'Delete', :controller => :trashcan, :action => :delete, :id => note.id, data: { confirm: 'Are
         you sure?' } %></td>
         <td><%= link_to 'Undo', :controller => :trashcan, :action => :undo, :id => note.id %></td>
      </tr>
      <% end %>
  	</tbody>
</table>
