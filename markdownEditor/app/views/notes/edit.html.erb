<h1>Editing Note</h1>

<% if @note.slug.present? %>
	<p> Note has been Shared. The url for the shared note is: <br>
	<%= link_to 'sharedUrl', :controller => :shared_notes, :action=> :show, :slug => @note.slug%> </p>
	<% else %>
	<%= button_to "Share", share_note_path(@note), method: :put, :id => "shareButton"%>
	
<% end %>

<%= render 'form' %>
<%= link_to 'Back', notes_path %>


