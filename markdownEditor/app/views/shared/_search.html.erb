<%= form_tag notes_url, method: :get, class: 'navbar-form navbar-right' do %>
<div class="form-group">
	<div class="input-group">
		<input type="search" id="query" class="form-control" name="q" value="<%= params[:q] %>" placeholder="Search notes...">
		<span class="input-group-btn">
		  <button class="btn btn-default" type="submit">
		  	<i class="glyphicon glyphicon-search"></i>
		  </button>
		</span>
	</div>
</div>
<% end %>